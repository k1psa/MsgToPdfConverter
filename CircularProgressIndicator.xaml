<UserControl x:Class="MsgToPdfConverter.CircularProgressIndicator"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Name="Root"
             Padding="2">
    <Grid>
        <!-- Background circle -->
        <Ellipse x:Name="BackgroundCircle" 
                 Stroke="#E0E0E0" 
                 StrokeThickness="3" 
                 Fill="Transparent" 
                 Width="25" 
                 Height="25"
                 HorizontalAlignment="Center"
                 VerticalAlignment="Center"/>
        <!-- Foreground progress arc -->
        <Path x:Name="ProgressPath" 
              Stroke="#2196F3" 
              StrokeThickness="3" 
              Fill="Transparent"
              Width="25" 
              Height="25"
              HorizontalAlignment="Center"
              VerticalAlignment="Center">
            <Path.Data>
                <PathGeometry x:Name="ProgressGeometry">
                    <PathFigure x:Name="ProgressFigure" StartPoint="8,0">
                        <ArcSegment x:Name="ProgressArc" 
                                    Point="8,0" 
                                    Size="8,8" 
                                    SweepDirection="Clockwise" 
                                    IsLargeArc="False"/>
                    </PathFigure>
                </PathGeometry>
            </Path.Data>
        </Path>
        <!-- Centered progress text -->
        <TextBlock x:Name="ProgressText" 
                   Text="0%" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center" 
                   FontWeight="Bold" 
                   FontSize="8" 
                   Foreground="#333"/>
    </Grid>
</UserControl>