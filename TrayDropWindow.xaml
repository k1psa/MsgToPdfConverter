<Window x:Class="MsgToPdfConverter.TrayDropWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Drop Here" Height="110" Width="240"
        WindowStyle="None" AllowsTransparency="True" Background="#FF2222AA"
        Topmost="True" ShowInTaskbar="False" ResizeMode="NoResize"
        AllowDrop="True">
    <Grid>
        <Border CornerRadius="10" Background="#AA333333" BorderBrush="#FFAAAAAA" BorderThickness="2">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="Drop files here" Foreground="White" FontSize="16" HorizontalAlignment="Center"/>
                <TextBlock TextWrapping="Wrap" TextAlignment="Center" Width="200"
                           Text="Double-click this window\nto open the main window" Foreground="#FFCCCCCC" FontSize="12" Margin="0,8,0,0" HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
        <Button x:Name="CloseButton" Content="âœ•" Width="24" Height="24" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="4" Background="#00FFFFFF" BorderBrush="Transparent" Foreground="White" FontWeight="Bold" Cursor="Hand"/>
    </Grid>
</Window>
