<Window x:Class="MsgToPdfConverter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MSG to PDF Converter"
        Height="370"
        Width="525">
        <Grid Margin="10">
                <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <TextBlock FontSize="16"
                           FontWeight="Bold"
                           Text="Select .msg Files or Folders to Convert to PDF"
                           Margin="0,0,0,10"
                           Grid.Row="0"/>
                <StackPanel Orientation="Horizontal"
                            Grid.Row="1"
                            Margin="0,0,0,10">
                        <Button x:Name="SelectFilesButton"
                                Content="Add .msg Files or Folders"
                                Click="SelectFilesButton_Click"
                                Width="200"
                                Margin="0,0,10,0"/>
                        <Button x:Name="ClearListButton"
                                Content="Clear List"
                                Click="ClearListButton_Click"
                                Width="80"/>
                        <Button x:Name="OptionsButton"
                                Content="Options..."
                                Click="OptionsButton_Click"
                                Width="80"
                                Margin="5,0,0,0"/>
                </StackPanel>
                <TextBlock x:Name="FileCountLabel"
                           Text="Files selected: 0"
                           FontStyle="Italic"
                           Foreground="Gray"
                           Margin="0,0,0,10"
                           Grid.Row="2"/>
                <ListBox x:Name="FilesListBox"
                         Margin="0,0,0,10"
                         SelectionMode="Extended"
                         KeyDown="FilesListBox_KeyDown"
                         AllowDrop="True"
                         Drop="FilesListBox_Drop"
                         DragEnter="FilesListBox_DragEnter"
                         DragOver="FilesListBox_DragOver"
                         Grid.Row="3"
                         MinHeight="150">
                        <ListBox.Style>
                                <Style TargetType="ListBox">
                                        <Style.Triggers>
                                                <Trigger Property="HasItems"
                                                         Value="False">
                                                        <Setter Property="Template">
                                                                <Setter.Value>
                                                                        <ControlTemplate>
                                                                                <Border Background="{TemplateBinding Background}"
                                                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                                                        BorderThickness="{TemplateBinding BorderThickness}">
                                                                                        <TextBlock Text="Drop .msg files or folders here, or use the button above"
                                                                                                   Foreground="Gray"
                                                                                                   FontStyle="Italic"
                                                                                                   HorizontalAlignment="Center"
                                                                                                   VerticalAlignment="Center"
                                                                                                   Margin="10"/>
                                                                                </Border>
                                                                        </ControlTemplate>
                                                                </Setter.Value>
                                                        </Setter>
                                                </Trigger>
                                        </Style.Triggers>
                                </Style>
                        </ListBox.Style>
                </ListBox>
                <CheckBox x:Name="AppendAttachmentsCheckBox"
                          Content="Append attachments as PDF at the end"
                          Margin="0,0,0,10"
                          Grid.Row="4"/>
                <StackPanel Orientation="Horizontal"
                            Grid.Row="7"
                            Margin="0,0,0,10">
                        <Button x:Name="SelectOutputFolderButton"
                                Content="Select Output Folder"
                                Click="SelectOutputFolderButton_Click"
                                Width="120"
                                Margin="0,0,10,0"/>
                        <Button x:Name="ClearOutputFolderButton"
                                Content="Clear"
                                Click="ClearOutputFolderButton_Click"
                                Width="50"
                                Margin="0,0,10,0"/>
                        <TextBlock x:Name="OutputFolderLabel"
                                   Text="(Default: Same as .msg file)"
                                   VerticalAlignment="Center"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal"
                            Grid.Row="8"
                            Margin="0,0,0,10">
                        <Button x:Name="ConvertButton"
                                Content="Convert to PDF"
                                Click="ConvertButton_Click"
                                IsEnabled="False"
                                Width="120"
                                Margin="0,0,10,0"/>
                        <Button x:Name="CancelButton"
                                Content="Cancel"
                                Click="CancelButton_Click"
                                Width="80"
                                Visibility="Collapsed"/>
                </StackPanel>
                <TextBlock x:Name="ProcessingStatusLabel"
                           Text=""
                           FontWeight="Bold"
                           Foreground="Blue"
                           Margin="0,0,0,10"
                           Visibility="Collapsed"
                           Grid.Row="9"/>
                <ProgressBar x:Name="ProgressBar"
                             Height="20"
                             Margin="0,0,0,10"
                             Minimum="0"
                             Maximum="100"
                             Value="0"
                             Visibility="Collapsed"
                             Grid.Row="10"/>
                <CheckBox x:Name="AlwaysOnTopCheckBox"
                          Content="Always on top"
                          VerticalAlignment="Bottom"
                          HorizontalAlignment="Right"
                          Margin="5"
                          FontSize="11"
                          Opacity="0.7"
                          ToolTip="Keep this window above others"
                          Checked="AlwaysOnTopCheckBox_Checked"
                          Unchecked="AlwaysOnTopCheckBox_Unchecked"/>
        </Grid>
</Window>